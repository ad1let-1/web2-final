{
  "info": {
    "name": "Pet Adoption System",
    "_postman_id": "b8d3f1f0-9d0e-4b06-8b1a-6f38a0d8b0a1",
    "description": "Postman collection for Pet Adoption System. Set environment variables before running. Admin user must already exist in the database with role=admin.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const json = pm.response.json();",
                  "  pm.environment.set('userToken', json.token);",
                  "  if (json.user && json.user.id) pm.environment.set('userId', json.user.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const json = pm.response.json();",
                  "  pm.environment.set('userToken', json.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const json = pm.response.json();",
                  "  pm.environment.set('adminToken', json.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated User\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Pets (Resource)",
      "item": [
        {
          "name": "Get All Pets",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/resource",
              "host": ["{{baseUrl}}"],
              "path": ["api", "resource"]
            }
          }
        },
        {
          "name": "Create Pet (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/resource",
              "host": ["{{baseUrl}}"],
              "path": ["api", "resource"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Bobby\",\n  \"species\": \"dog\",\n  \"age\": 2,\n  \"status\": \"available\",\n  \"breed\": \"Mixed\",\n  \"imageUrl\": \"https://placehold.co/600x400\",\n  \"description\": \"Friendly and playful.\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const json = pm.response.json();",
                  "  if (json.pet && json.pet._id) pm.environment.set('petId', json.pet._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Pet By ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/resource/{{petId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "resource", "{{petId}}"]
            }
          }
        },
        {
          "name": "Update Pet (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/resource/{{petId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "resource", "{{petId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"available\",\n  \"description\": \"Updated description.\"\n}"
            }
          }
        },
        {
          "name": "Adopt Pet (User)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/resource/{{petId}}/adopt",
              "host": ["{{baseUrl}}"],
              "path": ["api", "resource", "{{petId}}", "adopt"]
            }
          }
        },
        {
          "name": "Delete Pet (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/resource/{{petId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "resource", "{{petId}}"]
            }
          }
        }
      ]
    }
  ]
}
